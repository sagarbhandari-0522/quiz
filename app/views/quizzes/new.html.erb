<%= form_with model: @quiz do |form|%>
	<% question_ids=[]%>
	<% @questions.each do|question|%>
		<% que=Question.find(question.question_id)%>
		<%= que.id%>
		<% question_ids.append(que.id)%>
		<%= que.title%>
		<h2>Options</h2>
		<%= form.collection_check_boxes :user_answer, que.options.all, :id, :title%>
		<br>
	<% end%>
	<%= form.hidden_field :question_ids, :multiple=>true,value: question_ids%>
	<%= form.hidden_field :category_ids, :multiple=>true,value: @category%>
	<div>
		<%=form.submit%>
	</div>
<% end%>
