<div class='row'>
	<% @quiz&.each do |quiz|%>
		<div class="col-5 mb-4 ml-5">
			<div class="card border-left-primary shadow h-100 pt-2">
				<div class="card-body">
					<div class="row">
						<div class="col-9">
							<%= link_to(quiz_path(quiz), class: 'text-decoration-none') do%>
								<div class="font-weight-bold mb-1">
									<div class='row'>
										<div class='col-9 mt-2 pl-1 text-secondary'>
											<span><i class='text-uppercase'>User:</i> <%=quiz.email||quiz.user.email%></span><br>
											<span> <i>Played On:</i> <%= quiz.updated_at.to_date%></span><br>
											<span> <i>Categories:</i> <%= quiz.categories.pluck(:name).first(2).join(",")%></span>
										</div>
									</div>
								</div>
							<% end %>
						</div>
						<div class="col-3 pt-0 mt-0">
							<%= link_to(quiz_path(quiz,format: :pdf), class:'text-decoration-none') do%>
								<div class="myDIV"><i class="fa fa-eye fa-2x text-gray-300 display-inline"></i></div>
								<em class="hide btn btn-secondary btn-sm"> View PDF</em>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end%>
</div>
