<section class="vh-100" style="background-color: #4B8673;">
	<div class="container pt-2 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-xl-10">
				<div class="card p-5" style="border-radius: 1rem;">
					<div class="row g-0">
						<div class="col-md-6 col-lg-5 d-none d-md-block text-center my-auto">
							<%= image_tag 'logo6.png', class:"img-fluid" %>
							<%# <img src="/app/assets/images/back1.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" /> %>
						</div>
						<div class="col-md-6 col-lg-7 d-flex align-items-center">
							<div class="card-body text-black">
								<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'user') do |f| %>
									<div class="form-group">
										<%= f.email_field :email, class: "form-control form-control-user",placeholder: "Enter Email Address...", id:"exampleInputEmail", autofocus: true, autocomplete: "email"%>
									</div>
									<div class="form-group">
										<%= f.password_field :password, class: "form-control form-control-user",placeholder: "Password.....", id:"exampleInputEmail", autofocus: true, autocomplete: "current-password" %>
									</div>
									<div class="actions">
										<%= f.submit "Login", class: "btn btn-primary btn-user btn-block", data:{turbo:false} %>
									</div>
									<hr>
								<% end %>
								<%= button_to(user_google_oauth2_omniauth_authorize_path ,class: 'btn btn-google btn-user btn-block', data:{turbo:false}) do%>
									<i class="fab fa-google fa-fw"></i> Login with Google
								<% end %>
								<div class="text-center">
									<%= link_to 'Sign Up', new_user_registration_path,class: 'btn btn-facebook btn-user btn-block'%>
								</div>
								<hr>
								<div class='text-center'>
									<%= link_to 'Continue without login', play_quiz_path,class: 'text-center text-decoration-none info-primary'%>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
