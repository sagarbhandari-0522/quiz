<% if flash.any? %>
	<% flash.each do |name,msg|%>
		<div class="row">
			<div class='alert alert-<%="#{name}"%> alert-dismissible fade show' role="alert">
				<strong><%= msg %></strong>
				<button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		</div>
	<% end%>
<% end%>
